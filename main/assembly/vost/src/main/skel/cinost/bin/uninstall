#!/bin/bash
#
# uninstall a volume manager daemon, a rest server and a cinder volume service
#

NAME=cinost

# stop service
sudo /etc/init.d/$NAME stop

# uninstall init script links
sudo update-rc.d -f $NAME remove

# delete init script
sudo rm -f /etc/init.d/$NAME

# remove user vost if exists
if getent passwd $NAME >/dev/null; then    
    sudo userdel $NAME
fi

# uninstall cinder
if [[ $OS_PREFIX != "" ]]; then
    sudo $OS_PREFIX/bin/uninstall-cinder
fi