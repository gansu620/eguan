<assembly>
    <id>cinostwui</id>
    <formats>
        <format>tar.bz2</format>
    </formats>
    <baseDirectory>cinostwui-${project.version}</baseDirectory>

    <!-- Adds files: only vost under the lib directory -->
    <files>
        <file>
            <source>${project.build.directory}/${artifact.artifactId}-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>vost.jar</destName>
        </file>
        <file>
            <source>${project.build.directory}/VERSION</source>
            <outputDirectory></outputDirectory>
        </file>
    </files>

    <!-- Adds dependencies: vold and rest-launcher under the lib directory -->
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>${project.groupId}:vold</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}.jar</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>${project.groupId}:rest-launcher</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}.jar</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>${project.groupId}:openstack-cinder</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}-${version}.egg</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>${project.groupId}:webui</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}.war</outputFileNameMapping>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!-- Skeleton: copied under assembly root -->
        <fileSet>
            <directory>src/main/skel/commons</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/skel/cinostwui</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/skel/cinost</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>**/bin/*</include>
                <include>**/config/cinost*</include>
                <include>**/config/cinder*</include>
            </includes>
        </fileSet>

        <!-- Native libraries: under lib directory -->
        <fileSet>
            <directory>target/nar</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>**/lib/lib*so*</include>
            </includes>
            <excludes>
                <exclude>**/*-*/lib/lib*so*</exclude>
            </excludes>
        </fileSet>
    </fileSets>

</assembly>
